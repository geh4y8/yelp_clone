<!DOCTYPE html>
<html>
<head>
  <title>YelpClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <nav id="nav" class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <ul class="nav nav-pills">
        <ul class="nav navbar-nav pull-left">
          <li><%= image_tag("yelp.png", height: '60', width: '60', :id => "nav_logo") %></li>
          <% if current_user %>
            <li><span id="user_nav_label"><%= current_user.email %></span></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if current_user %>
            <li><%= link_to "My Reviews", user_path(current_user) %></li>
            <li><%= link_to "Browse Restaurants", restaurants_path %></li>
            <li><%= link_to "Log Out", logout_path %></li>
            <li class="active"><%= link_to "Home", root_url %></li>
          <% end %>
        </ul>
      </ul>
    </div>
  </nav>
</head>
<body>


<div id="new_session_wrapper">
  <% if !current_user %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-warning" %> or
    <%= link_to "Log In", login_path, class: "btn btn-success" %>
  <% end %>
</div>


<%= yield %>


</body>
</html>

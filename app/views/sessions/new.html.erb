

<video autoplay loop poster="/assets/bar.jpeg" id="bgvid">
  <source src="/assets/bgvideo.webm" type="video/webm" />
  <source src="/assets/bgvideo.mp4" type="video/mp4" />
</video>

<div id="new_session_wrapper">
  <h1>Log In</h1>

  <%= form_tag sessions_path, id: "log_in_form" do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email], :class => "input-lg" %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <br />
    <div class="actions"><%= submit_tag "Log In", class: "btn btn-lg" %></div>
  <% end %>
</div>

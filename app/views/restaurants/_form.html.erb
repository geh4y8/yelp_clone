<%= form_for @restaurant, :url => restaurants_path, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.file_field :restaurant_photo %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>

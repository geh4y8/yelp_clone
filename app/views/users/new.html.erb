<video autoplay loop poster="/assets/restaurant2.jpg" id="bgvid">
  <source src="/assets/bgvideo.webm" type="video/webm" />
  <source src="/assets/bgvideo.mp4" type="video/mp4" />
</video>

<div id= "new_session_wrapper">
<h1>Sign Up</h1>



<%= form_for @user, :html => { :multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field btn btn-lg">
    <%= f.file_field :user_photo %>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
</div>

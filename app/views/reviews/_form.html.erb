<%= form_for @review, :url => restaurant_reviews_path, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :review_details %>
    <%= f.text_field :review_details %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select(:rating, options_for_select([['★', 1], ['★★', 2], ['★★★', 3], ['★★★★', 4], ['★★★★★', 5]])) %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
